{% extends 'new_base.html.twig' %}
{% block main %}
    <h1 class="main-heading">Elliteam, vos héros digitaux.</h1>

    <p class="subtitle">
        Recrutement CDI et missions en prestation pour vos projets digitaux.
        Choisissez votre besoin en un clic :
    </p>
    {# Affichage des messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <!-- CTA Buttons -->
    <div class="cta-buttons">
        <button class="btn btn-primary">
            <a href="{{ path('app_company_offer') }}">Je dépose une offre<br>(CDI / mission)</a>
        </button>
        <button class="btn btn-secondary">
            <a href="{{ path('app_candidate_index') }}">Je dépose ma<br>candidature / CV</a>
        </button>
    </div>

    <!-- Illustration section -->
    <div class="illustration">
        <img
            src="{{ asset('images/hero-recruitment.svg') }}"
            alt="Recrutement digital — Elliteam"
            class="hero-image"
        >
    </div>

    <!-- Bottom information cards -->
    <div class="bottom-section">
        <div class="info-card">
            <h3>Vous êtes une entreprise ?</h3>
            <p>Confiez-nous vos besoins en recrutement ou en prestation:</p>
        </div>
        <div class="info-card">
            <h3>Vous êtes candidat ?</h3>
            <p>Partagez votre profil et vos envies :</p>
        </div>
    </div>
{% endblock %}